{{#extend "layouts/main"}}
    {{#content "body"}}
        <h1>Latest Posts</h1>
        {{#if posts.length}}
            {{#each posts}}
                <div class="post">
                    <h2>{{title}}</h2>
                    <p>{{content}}</p>
                    <p>Published by {{user.username}} on {{createdAt}}</p>
                    <a href="/post/{{id}}">Read more</a>
                </div>
            {{/each}}
        {{else}}
            <p>No posts found.</p>
        {{/if}}
    {{/content}}
{{/extend}}